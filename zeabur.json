{
  "name": "electricity-bill-monitoring",
  "type": "python",
  "build": {
    "buildCommand": "pip install -r requirements.txt",
    "outputDirectory": ".",
    "installCommand": "pip install -r requirements.txt"
  },
  "run": {
    "startCommand": "python3 app.py"
  },
  "env": {
    "PORT": "8080",
    "PYTHON_VERSION": "3.11",
    "FLASK_ENV": "production",
    "PYTHONUNBUFFERED": "1",
    "TZ": "Asia/Shanghai"
  },
  "regions": ["hkg1"],
  "plan": "hobby",
  "healthCheck": {
    "path": "/api/status",
    "interval": 30,
    "timeout": 10,
    "retries": 3
  }
}